<% layout("./layout/boilerplate") %>
<div class="row mt-3" >
    <div class="col-8 offset-2">
        <h3>Edit new list</h3>
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation">
        <div class="mb-3">  
            <label for="title" class="form-lable">Title</label>
            <input 
            name="listing[title]" 
            value="<%= listing.title %>" 
            type="text" 
            class="form-control"
            required>
            <div class="invalid-feedback">
                please enter valid title
            </div>
        </div>

        <div class="mb-3">
            <label for="description" class="form-lable">Description</label><br>
            <textarea 
            name="listing[description]"  
            type="text" 
            class="form-control"
            required
            ><%= listing.description %></textarea>
            <div class="invalid-feedback">
                please enter a short description
            </div>
        </div>
        
        <div class="mb-3">
            <label for="image" class="form-lable">image link</label>
            <input 
            name="listing[image]" 
            value="<%= listing.image.url %>" 
            type="text" 
            class="form-control"
            required
            >
            <div class="invalid-feedback">
                please enter a valid image link
            </div>
        </div>

        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-lable">Price</label>
                <input 
                name="listing[price]" 
                value="<%= listing.price%>" 
                type="number" 
                class="form-control"
                required>
                <div class="invalid-feedback">
                    please enter a vlaid price                
                </div>
            </div>
    
            <div class="mb-3 col-md-8">
                <label for="country" class="form-lable">Country</label>
                <input 
                type="listing[country]" 
                value="<%= listing.country %>" 
                type="text" 
                class="form-control"
                required
                >
                <div class="invalid-feedback">
                    please enter valid country name
                </div>
            </div>            
        </div>

        <div class="mb-3">
            <label for="location" class="form-lable">Location</label>
            <input 
            type="listing[location]" 
            value="<%= listing.location %>" 
            type="text" 
            class="form-control"
            required
            >
            <div class="invalid-feedback">
                please enter a valid location
            </div>
        </div>
        
        <button class="mt-3 mb-3 btn edit-btn">Add</button>
    </form>

    </div>
</div>

<script src="/js/script.js"></script>
    